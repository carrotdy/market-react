{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "es5",
      "lib": ["esnext", "dom", "dom.iterable"],
      "sourceMap": true,
      "jsx": "react",
      "noImplicitAny": true,
      "noEmitOnError": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "pretty": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "module": "esnext",
      "moduleResolution": "node",
      "typeRoots": ["./src/main/resources/app"],
      "baseUrl": "./",
      "paths": {
          "@images/*": ["./src/main/resources/app/images/*"],
          "@home/*": ["./src/main/resources/app/views/home/*"],
      }
  },
  "exclude": ["node_modules", "node"]
}
